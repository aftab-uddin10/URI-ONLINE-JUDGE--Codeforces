#include <iostream>
using namespace std;
int main() {
   int n,i,A,B,c=0;
   cin>>n;
   for(i=0;i<n;i++){
       cin>>A>>B;
       if((B-A)>=2) c++;
   }
  cout<<c<<endl;
    return 0;
}
